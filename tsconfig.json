{
    "compilerOptions": {
        "moduleResolution": "node",
        "target": "es2015",
        "lib": ["es2016", "dom"],
        "noImplicitAny": true,
        "strictNullChecks": true,
        "allowJs": true,
        "sourceMap": true,
        "typeRoots": [
          "node_modules/@types"
        ]
    },
    "include": [
        "./source"
    ],
    "exclude": [
        "node_modules"
    ],
    "awesomeTypescriptLoaderOptions": {
        "useCache": true
    }
}
